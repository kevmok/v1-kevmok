{
	"$schema": "https://biomejs.dev/schemas/1.2.2/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		},
		"ignore": [
			"src/routeTree.gen.ts",
			"dist/*",
			"*.db",
			"*.md",
			"*.lockb",
			"node_modules",
			".next",
			".vinxi",
			".output"
		]
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"indentStyle": "tab",
		"indentSize": 2,
		"ignore": [
			"src/routeTree.gen.ts",
			"dist/*",
			"*.db",
			"*.md",
			"*.lockb",
			"node_modules",
			".next",
			".vinxi",
			".output"
		]
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"semicolons": "always",
			"trailingComma": "all",
			"arrowParentheses": "asNeeded"
		}
	}
}
