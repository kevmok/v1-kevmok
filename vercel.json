{
	"$schema": "https://openapi.vercel.sh/vercel.json",
	"buildCommand": "bun run build",
	"outputDirectory": "dist",
	"installCommand": "bun install",
	"framework": null,
	"rewrites": [
		{
			"source": "/sitemap.xml",
			"destination": "/sitemap.xml"
		}
	],
	"headers": [
		{
			"source": "/(.*)",
			"headers": [
				{
					"key": "X-Content-Type-Options",
					"value": "nosniff"
				},
				{
					"key": "X-Frame-Options",
					"value": "DENY"
				},
				{
					"key": "X-XSS-Protection",
					"value": "1; mode=block"
				}
			]
		}
	]
}
